<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 http://www.springframework.org/schema/context 
 http://www.springframework.org/schema/context/spring-context-4.0.xsd">



	<context:component-scan base-package="controllerAdvice"></context:component-scan>

	<bean id="studentEmpty" class="controllerAdvice.Student">
		<property name="no" value="0"></property>
		<property name="name"><null/></property>
	</bean>

	<bean id="studentService" class="controllerAdvice.StudentService" init-method="init" destroy-method="destroy">
	</bean>
	
</beans>
