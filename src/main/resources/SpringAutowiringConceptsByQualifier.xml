<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 http://www.springframework.org/schema/context 
 http://www.springframework.org/schema/context/spring-context-4.0.xsd">


	<context:component-scan base-package="ex"></context:component-scan>
	<bean id="studentOne" class="ex.Student">
		<property name="no" value="1" />
		<property name="name" value="gopal" />
	</bean>

	<bean id="studentTwo" class="ex.Student">
		<property name="no" value="2" />
		<property name="name" value="krishnan" />
	</bean>


	<bean id="studentService" class="ex.StudentService">
	</bean>

</beans>
